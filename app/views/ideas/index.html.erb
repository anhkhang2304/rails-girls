
<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4" style="border:1px solid #333">
        <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
        <%= image_tag idea.picture_url(:middle) if idea.picture? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
        <p><%= link_to 'Show', idea %></p>
        <p><%= link_to 'Edit', edit_idea_path(idea) %></p>
        <p><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
<% end %>